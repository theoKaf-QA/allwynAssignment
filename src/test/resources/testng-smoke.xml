<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Allwyn Assignment - Smoke Test Suite" verbose="1">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Smoke Test">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <classes>
            <class name="org.allwynassignment.tests.BooksTests"/>
            <class name="org.allwynassignment.tests.AuthorsTests"/>
        </classes>
    </test>
</suite>


